<h1>Viewing all tags and their entries</h1>

<% @tags.each do |t| %>

<div class="tag-entries">
	<h2><%= t.name %></h2>
	<% t.feed_entries.each do |e| %>
		<p>
			<%= e.published_at %> <%= link_to "[>]", e.url %> 
			<%= link_to truncate(e.title, :length => 100), e %> (<%= raw linked_tag_string e.tags %>)
		</p>
	<% end %>
	<h2 style="text-align: right;"><%= t.name %></h2>
</div>

<% end %>